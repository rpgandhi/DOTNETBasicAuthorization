@using Microsoft.AspNetCore.Identity.EntityFrameworkCore;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role List";
    Layout = "_Layout";
}

<h2>Role List</h2>
@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr/>

<div>
    @foreach (var role in Model)
	{
	    <p><strong>@role.Name | </strong> 
	    <span onclick="return confirm('Are you sure to delete?')"><a href=@Url.Action("Delete", "Role", new {id = role.Id}) class="delLink" style="color:red;">Delete</a></span> | 
	    @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
	    </p>
	}
</div>
